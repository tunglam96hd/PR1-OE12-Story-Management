<div id = contentleft>
  <h2 id = "content"> <%= t ".truyenlove" %> </h2>
  <div id="list-story">
    <%= render "list_truyen", collection: @stories %>
  </div>
  <%= paginate @stories, theme: "twitter-bootstrap-3" %>
</div>
<div id = "sidebar">
  <h2 id = "name"> <%= t ".truyennew" %> </h2>
  <div>
    <%= render "new_story", collection: @news %>
  </div>
</div>
